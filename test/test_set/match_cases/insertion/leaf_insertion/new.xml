<properties xmlns="http://cpee.org/ns/properties/2.0">
    <dataelements>
        <costs>0</costs>
    </dataelements>
    <dslx>
        <description xmlns="http://cpee.org/ns/description/1.0">
            <manipulate>data.costs = 100;</manipulate>
            <loop condition="data.costs > 0">
                <manipulate>data.cost--;</manipulate>
            </loop>
        </description>
    </dslx>
</properties>