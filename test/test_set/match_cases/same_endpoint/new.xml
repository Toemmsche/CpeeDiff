<properties xmlns="http://cpee.org/ns/properties/2.0">
    <dataelements>
        <to>Prague</to>
        <hotel>null</hotel>
        <persons>3</persons>
    </dataelements>
    <endpoints>
        <bookHotel>http://gruppe.wst.univie.ac.at/~mangler/services/hotel.php</bookHotel>
    </endpoints>
    <dslx>
        <description xmlns="http://cpee.org/ns/description/1.0">
            <call id="a2" endpoint="bookHotel">
                <parameters>
                    <label>Book Hotel</label>
                    <method>:post</method>
                    <arguments>
                        <to>data.to</to>
                        <persons>data.persons</persons>
                    </arguments>
                </parameters>
                <code>
                    <finalize output="result">data.hotel = result.value('hotel_id');</finalize>
                </code>
            </call>
        </description>
    </dslx>
</properties>