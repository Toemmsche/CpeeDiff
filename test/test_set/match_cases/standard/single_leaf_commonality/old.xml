<properties xmlns="http://cpee.org/ns/properties/2.0">
    <dataelements>
        <varA>2</varA>
        <varB>1</varB>
        <varC>0</varC>
    </dataelements>
    <dslx>
        <description xmlns="http://cpee.org/ns/description/1.0">
            <loop condition="data.varA < 100">
                <manipulate>data.varA++;</manipulate>
                <manipulate>data.varB++;</manipulate>
                <manipulate>data.varC++;</manipulate>
            </loop>
        </description>
    </dslx>
</properties>