<description xmlns="http://cpee.org/ns/description/1.0">
    <choose>
        <alternative condition="data.costs < 0">
            <escape></escape>
            <loop condition="data.persons > 0">
                <terminate></terminate>
                <stop></stop>
            </loop>
        </alternative>
        <otherwise>
            <manipulate>data.time++;</manipulate>
        </otherwise>
    </choose>
    <manipulate>data.val--</manipulate>
</description>