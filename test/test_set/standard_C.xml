<description xmlns="http://cpee.org/ns/description/1.0">
    <loop>
    <call id="a1" endpoint="bookAi">
        <parameters>
            <label>Book Airline</label>
            <method>:post</method>
            <arguments>
                <from>data.from</from>
                <to>data.to</to>
                <persons>data.persons</persons>
            </arguments>
        </parameters>
        <code>
            <finalize output="result">data.airline = result.value('id') data.costs += result.value('costs').to_f'</finalize>
        </code>
    </call>
    </loop>
    <stop></stop>
    <terminate></terminate>
    <escape></escape>
    <manipulate>data.persons++</manipulate>
</description>

