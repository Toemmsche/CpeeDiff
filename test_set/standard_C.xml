<description xmlns="http://cpee.org/ns/description/1.0">
    <loop condition="costs < 0">
        <call id="a1" endpoint="bookAir">
            <parameters>
                <label>Book AirlinesNEW</label>
                <method>:post</method>
                <arguments>
                    <from>data.from</from>
                    <to>data.to</to>
                    <persons>data.persons</persons>
                    <deep>45</deep>
                </arguments>
            </parameters>
            <code>
                <finalize output="result">data.airline = result.value('id') data.costs += result.value('costs').to_f status.update 1, 'Hotel'</finalize>
            </code>
        </call>
    </loop>
    <parallel>
        <loop mode="pre_test" condition="data.persons > 0">
            <parallel_branch pass="data.persons" local="p">
                <call id="a2" endpoint="bookHotel">
                    <parameters>
                        <label>Book Hotel</label>
                        <method>:post</method>
                        <arguments>
                            <to>data.to</to>
                        </arguments>
                    </parameters>
                    <code>
                        <finalize output="result">data.hotels result.value('id') data.costs += result.value('costs').to_f</finalize>
                    </code>
                    <description>SDFLJSDFLSDFJSLDFJSJDFLLDFKS</description>
                </call>
            </parallel_branch>
            <manipulate id="a3">data.persons -= 1</manipulate>
        </loop>
    </parallel>
    <stop id="a6"></stop>
    <manipulate id="sdfd">data.costs += 12</manipulate>
</description>