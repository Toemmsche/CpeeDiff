<description
    xmlns="http://cpee.org/ns/description/1.0">
    <choose mode="inclusive">
        <alternative condition="data.costs > 700">
            <terminate></terminate>
            <call endpoint="http://gruppe.wst.univie.ac.at/~mangler/services/approval.php">
                <parameters>
                    <label>Approve Hotel</label>
                    <method>:post</method>
                    <arguments>
                        <costs>data.costs</costs>
                    </arguments>
                </parameters>
            </call>
        </alternative>
    </choose>
</description>