<description
    xmlns="http://cpee.org/ns/description/1.0">
    <call endpoint="http://gruppe.wst.univie.ac.at/~mangler/services/hotel.php">
        <parameters>
            <label>Book Hotel</label>
            <method>:post</method>
            <arguments>
                <to>data.to</to>
            </arguments>
        </parameters>
        <code>
            <finalize output="result">data.airline = result.value('id'); data.costs += result.value('costs').to_f;</finalize>
        </code>
    </call>
    <call endpoint="http://gruppe.wst.univie.ac.at/~mangler/services/approval.php">
        <parameters>
            <label>Approve Hotel</label>
            <method>:post</method>
            <arguments>
                <costs>data.costs</costs>
            </arguments>
        </parameters>
    </call>
    <call endpoint="http://gruppe.wst.univie.ac.at/~mangler/services/airline.php">
        <parameters>
            <label>Book Airline</label>
            <method>:post</method>
            <arguments>
                <from>data.from</from>
                <to>data.to</to>
                <persons>data.persons</persons>
            </arguments>
        </parameters>
        <code>
            <finalize output="result">data.airline = result.value('id'); data.costs += result.value('costs').to_f;</finalize>
        </code>
    </call>
</description>