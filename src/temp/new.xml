<description xmlns="http://cpee.org/ns/description/1.0">
    <loop condition="data.items.length > 0">
        <call id="a2" endpoint="shipItems">
            <parameters>
                <label>Initiate shipping to customer</label>
                <method>:put</method>
                <arguments>
                    <item>data.items.pop()</item>
                    <to>data.address</to>
                    <while>sdfas</while>
                </arguments>
            </parameters>
        </call>
    </loop>
</description>