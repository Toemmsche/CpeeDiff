<description xmlns="http://cpee.org/ns/description/1.0">
    <loop condition="data.costs = 0">
        <terminate/>
        <critical>
            <parallel_branch>
                <manipulate sdfa="asdfsadf">data.persons -= 1</manipulate>
                <manipulate>data.A++;</manipulate>
            </parallel_branch>
        </critical>
    </loop>
</description>